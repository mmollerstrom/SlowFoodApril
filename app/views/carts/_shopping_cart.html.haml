- if !@order_item.nil? && @order_item.errors.any?
  .alert.alert-danger
    %ul
      -@order_item.errors.full_messages.each do |msg|
        %li= msg
- if @order_items.size == 0
  %p.text-center
    There are no dishes in your cart. Please #{link_to "go back",root_path} and add some food to your cart.
- else
  -@order_items.each do |order_item|
    =render 'carts/cart_row', dishes: order_item.dish, order_item: order_item, show_total: true
