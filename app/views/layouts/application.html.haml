!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SlowFoodApril
    = csrf_meta_tags
    = stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag  "https://maps.googleapis.com/maps/api/js?key=AIzaSyB1qLGS4tfitWPh2TDhoAVrLGDpYJ2st88"
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %div.navbar
      = render 'partials/navbar'
    %p.notice
      = notice
    %p.alert
      = alert

    .container
      .row
      .col-xs-6
      %h1= link_to "My Orders", root_path
      .col-xs-6.text-right
      %h1.cart-text= render 'layouts/cart_text'
    = yield
